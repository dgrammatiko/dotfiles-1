{
    // autoDocstring
    "autoDocstring.docstringFormat": "numpy",
    "autoDocstring.includeExtendedSummary": true,
    "autoDocstring.startOnNewLine": true,

    // editor
    "editor.fontFamily": "Inconsolata",
    "editor.fontSize": 14,
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [
        80
    ],
    "editor.tabCompletion": "on",

    // files
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.exclude": {
        "**/__pycache__": true,
        "**/.tags": true
    },

    // fortran
    "fortran.symbols": [],

    // latex-workshop
    "latex-workshop.bind.altKeymap.enabled": true,
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.chktex.enabled": true,

    // markdownlint
    "markdownlint.config": {
        "MD003": { "style": "setext_with_atx" }
    },

    // python
    "python.formatting.blackArgs": [
        "--skip-string-normalization"
    ],
    "python.formatting.provider": "black",
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": ["--max-line-length=88"],
    "python.linting.mypyEnabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.pydocstyleEnabled": true,
    "python.linting.pydocstyleArgs": ["--ignore=D107,D203,D212,D213,D402,D413,D415,D416,D417"],
    "python.pythonPath": "${env:CONDA_PYTHON_EXE}",
    "python.terminal.launchArgs": [
        "-m",
        "IPython"
    ],

    // spellright
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "plaintext"
    ],
    "spellright.language": [
        "en-GB"
    ],
    "spellright.groupDictionaries": false,

    // terminal
    "terminal.external.osxExec": "iTerm.App",
    "terminal.integrated.fontFamily": "Inconsolata for Powerline",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.lineHeight": 1.2,

    // vim
    "vim.easymotion": true,
    "vim.enableNeovim": true,
    "vim.hlsearch": true,
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "f",
                "d"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    "vim.leader": "<space>",
    "vim.neovimPath": "/usr/local/bin/nvim",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "j"
            ],
            "after": [
                "g",
                "j"
            ]
        },
        {
            "before": [
                "k"
            ],
            "after": [
                "g",
                "k"
            ]
        },
        {
            "before": [
                "$"
            ],
            "after": [
                "g",
                "$"
            ]
        },
        {
            "before": [
                "^"
            ],
            "after": [
                "g",
                "^"
            ]
        },
        {
            "before": [
                "0"
            ],
            "after": [
                "g",
                "0"
            ]
        },
        {
            "before": [
                "Y"
            ],
            "after": [
                "y",
                "$"
            ]
        },
        {
            "before": [
                "J"
            ],
            "after": [
                "m",
                "z",
                "J",
                "`",
                "z"
            ]
        },
        {
            "before": [
                "<C-j>"
            ],
            "commands": [
                "editor.action.marker.nextInFiles"
            ]
        },
        {
            "before": [
                "<C-k>"
            ],
            "commands": [
                "editor.action.marker.prevInFiles"
            ]
        },
        {
            "before": [
                "<C-l>"
            ],
            "commands": [
                "workbench.action.editor.nextChange"
            ]
        },
        {
            "before": [
                "<C-h>"
            ],
            "commands": [
                "workbench.action.editor.previousChange"
            ]
        }
    ],
    "vim.sneak": true,
    "vim.useCtrlKeys": true,
    "vim.useSystemClipboard": true,
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                "f",
                "d"
            ],
            "after": [
                "<Esc>"
            ]
        },
        {
            "before": [
                ">"
            ],
            "commands": [
                "editor.action.indentLines"
            ]
        },
        {
            "before": [
                "<"
            ],
            "commands": [
                "editor.action.outdentLines"
            ]
        },
        {
            "before": [
                "p"
            ],
            "after": [
                "p",
                "g",
                "v",
                "y"
            ]
        }
    ],

    // window
	"window.newWindowDimensions": "inherit",

    // write-good
    "write-good.languages": [
        "markdown",
        "latex",
        "restructuredtext"
    ],

    // workbench
    "workbench.colorTheme": "Monokai",

    // [FortranFreeForm]
    "[FortranFreeForm]": {
        "editor.tabSize": 2
    },

    // [git-commit]
    "[git-commit]": {
        "editor.rulers": [
            72,
            50
        ]
    },

    // [markdown]
    "[markdown]": {
        "editor.wordWrap": "wordWrapColumn"
    },

    // [python]
    "[python]": {
        "editor.rulers": [
            88
        ],
        "editor.defaultFormatter": "ms-python.python",
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true
    }
}
